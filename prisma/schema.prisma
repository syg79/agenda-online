generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Booking {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  protocol String @unique
  status   String @default("CONFIRMED") // CONFIRMED, CANCELED, COMPLETED

  // Dados do cliente
  clientName  String
  clientEmail String
  clientPhone String

  // Endereço
  address      String
  neighborhood String

  // Detalhes do Serviço
  services String[] // Array de strings (ex: ["Fotos HDR", "Drone"])
  notes    String?

  // Agendamento
  date     DateTime // Data do serviço
  time     String   // Horário (ex: "14:30")
  duration Int      // Duração total em minutos

  // Financeiro
  price         Decimal? @db.Decimal(10, 2)
  paymentStatus String   @default("PENDING") // PENDING, PAID, PARTIAL

  // Relacionamento com Fotógrafo
  photographerId String?
  photographer   Photographer? @relation(fields: [photographerId], references: [id])
}

model Photographer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  active    Boolean  @default(true)
  bookings  Booking[]
  timeBlocks TimeBlock[]
}

model TimeBlock {
  id             String   @id @default(uuid())
  photographerId String
  date           DateTime
  startTime      String
  endTime        String
  reason         String?
  photographer   Photographer @relation(fields: [photographerId], references: [id])
}