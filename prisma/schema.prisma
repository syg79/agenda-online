generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Booking {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  protocol String @unique
  status   String @default("CONFIRMED") // CONFIRMED, CANCELED, COMPLETED

  // Dados do cliente
  clientName  String
  clientEmail String
  clientPhone String

  // Endereço
  address      String
  neighborhood String

  // Detalhes do Serviço
  services String[] // Array de strings (ex: ["Fotos HDR", "Drone"])
  notes    String?

  // Agendamento
  date     DateTime // Data do serviço
  time     String   // Horário (ex: "14:30")
  duration Int      // Duração total em minutos
}