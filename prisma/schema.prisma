generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Booking {
  id             String        @id @default(uuid())
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  protocol       String        @unique
  status         String        @default("CONFIRMED")
  clientName     String
  clientEmail    String
  clientPhone    String
  address        String
  neighborhood   String
  services       String[]
  notes          String?
  date           DateTime
  time           String
  duration       Int
  price          Decimal?      @db.Decimal(10, 2)
  paymentStatus  String        @default("PENDING")
  photographerId String?
  city           String        @default("Curitiba")
  complement     String?
  latitude       Float?
  longitude      Float?
  state          String        @default("PR")
  zipCode        String?
  propertyType   String?       // field_102 from Tadabase (Ap, Casa, etc.)
  brokerDetails  String?       // field_177 from Tadabase (Name + Phone)
  photographer   Photographer? @relation(fields: [photographerId], references: [id])
}

model Photographer {
  id            String               @id @default(uuid())
  name          String
  email         String               @unique
  active        Boolean              @default(true)
  services      String[]
  baseLat       Float?               @default(-25.4284)
  baseLng       Float?               @default(-49.2733)
  color         String               @default("#3B82F6")
  latitude      Float?
  longitude     Float?
  neighborhoods Json?
  travelRadius  Int?                 @default(15)
  baseAddress   String?
  bookings      Booking[]
  preferences   ClientPreference[]
  regions       PhotographerRegion[]
  timeBlocks    TimeBlock[]
}

model CoverageArea {
  id        String  @id @default(uuid())
  name      String
  areaType  String  @default("auto")
  centerLat Float
  centerLng Float
  radiusKm  Float   @default(20)
  isActive  Boolean @default(true)
}

model TimeBlock {
  id             String       @id @default(uuid())
  photographerId String
  date           DateTime
  startTime      String
  endTime        String
  reason         String?
  photographer   Photographer @relation(fields: [photographerId], references: [id])
}

model Client {
  id          String             @id @default(uuid())
  name        String
  email       String             @unique
  phone       String?
  preferences ClientPreference[]
}

model ClientPreference {
  id             String       @id @default(uuid())
  clientId       String
  photographerId String
  priority       Int
  client         Client       @relation(fields: [clientId], references: [id])
  photographer   Photographer @relation(fields: [photographerId], references: [id])

  @@unique([clientId, photographerId])
}

model Region {
  id            String               @id @default(uuid())
  name          String
  cities        String[]
  neighborhoods String[]
  photographers PhotographerRegion[]
}

model PhotographerRegion {
  photographerId String
  regionId       String
  photographer   Photographer @relation(fields: [photographerId], references: [id])
  region         Region       @relation(fields: [regionId], references: [id])

  @@id([photographerId, regionId])
}

model RouteCache {
  id          String   @id @default(uuid())
  origin      String
  destination String
  distance    Float
  duration    Float
  updatedAt   DateTime @updatedAt

  @@unique([origin, destination])
}

model CepLocation {
  id           String   @id @default(uuid())
  zipCode      String   @unique
  latitude     Float
  longitude    Float
  neighborhood String?
  city         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model SyncLog {
  id        String   @id @default(uuid())
  source    String   // "tadabase-pull", "apolarbot", "formulario"
  status    String   // "success", "error"
  imported  Int      @default(0)
  errors    Int      @default(0)
  details   Json?
  createdAt DateTime @default(now())
}

model Property {
  id            String   @id @default(uuid())
  ref           String   @unique
  address       String?
  neighborhood  String?
  city          String?
  state         String?
  zipCode       String?
  propertyType  String?
  area          Float?
  bedrooms      Int?
  parkingSpaces Int?
  brokerName    String?
  storeName     String?
  price         Decimal? @db.Decimal(12, 2)
  latitude      Float?
  longitude     Float?
  building      String?
  description   String?
  situation     String?
  rawData       Json?
  scrapedAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ScrapeJob {
  id        String   @id @default(uuid())
  ref       String
  status    String   @default("pending") // pending, processing, complete, error
  percent   Int      @default(0)
  step      String   @default("")
  result    Json?
  error     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
